<!DOCTYPE html>
<html lang="en">
<%- include('header') -%>
<body>
<%- include('navbar') -%>
<!-- page header and title -->
<div class="container-fluid mt-3">
  <div class="jumbotron">
      <h1 class="display-3">All Employees</h1>
      <p class="lead">Click the "view" badge for more information.</p>
  </div>
</div>

<% if (employees.length) { %>
<!-- table view of all employees -->
<div class="container-fluid">
  <table class="table table-striped table-hover mb-5">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Records</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(function(employee) { %>
      <tr>
        <th scope="row"><%= employee._id %></th>
        <td><%= employee.firstName %></td>
        <td><%= employee.lastName %></td>
        <td><a href="/employee/<%= employee._id %>"><span class="badge badge-primary badge-pill">view</span></a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<% } else { %> <h4 class="m-4">No entries, yet!</h4>
<% } %>
<a class="btn btn-success ml-3" href="/new" role="button">Add Employee</a>

<%- include('footer') -%>
<% include('scripts') %>
</body>
</html>


